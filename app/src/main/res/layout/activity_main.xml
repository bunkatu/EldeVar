<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.mehmetkaya.eldevar.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="@drawable/bg"
        android:visibility="gone"
        android:id="@+id/mainContent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:id="@+id/horizontalContainer"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size Uygun Tarifler"
                android:textStyle="bold"
                android:textSize="20dp"
                android:singleLine="true"
                android:shadowColor="#9a9a9a"
                android:password="false"
                android:phoneNumber="false"
                android:paddingLeft="2dp"
                android:paddingBottom="5dp"
                android:textColor="#000000" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/horizontalScrollView"
                android:layout_above="@+id/search_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:background="#4d9c9c9c"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/horzontal_layout">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#000000"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <me.mehmetkaya.eldevar.CompletionView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#41ffffff"
            android:textColor="#e9000000"
            android:singleLine="false" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eec4c4c4"
        android:id="@+id/loadingContent">
        <io.saeid.fabloading.LoadingView
            android:id="@+id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
        android:scaleY="1.5"
            app:mfl_repeat="1000"
            app:mfl_duration="300"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>
